  const LoginComponent = () => {
    const { login } = useAuth();

    const handleLogin = async () => {
      try {
        await login('user@example.com', 'password123');
        console.log('Inloggad!');
      } catch (error) {
        console.error('Fel vid inloggning:', error.message);
      }
    };

    return <button onClick={handleLogin}>Logga in</button>;
  };
