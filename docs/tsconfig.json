{
  "extends": "@docusaurus/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-jsx", // För att hantera JSX/TSX och lösa "Cannot find namespace 'JSX'"
    "noEmit": true, // Vi vill inte generera JS-filer, Docusaurus hanterar det
    "strict": true, // För att säkerställa strikt typkontroll
    "skipLibCheck": true, // För att undvika problem med tredjepartsbibliotek
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@site/*": ["./*"] // För att lösa importer som '@site/static/img/SymbolDark.svg'
    },
    "types": [
      "node", // För Node.js-typer (t.ex. för 'node:fs')
      "@docusaurus/module-type-aliases" // För Docusaurus-moduler som '@theme/*'
    ]
  },
  "include": ["src/**/*", "docusaurus.config.js", "declarations.d.ts"],
  "exclude": [".docusaurus", "build", "node_modules", "plugins/boards-data/**/*"]
}